{% doc %}
  @prompt
    A magazine-style editorial layout
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-magazine-layout-{{ ai_gen_id }} {
    display: block;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding }}px;
  }

  .ai-magazine-layout__container-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr;
    gap: {{ block.settings.grid_gap }}px;
  }

  .ai-magazine-layout__featured-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    border-radius: {{ block.settings.border_radius }}px;
    background-color: {{ block.settings.card_background }};
  }

  .ai-magazine-layout__featured-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    aspect-ratio: {{ block.settings.featured_aspect_ratio }};
    overflow: hidden;
  }

  .ai-magazine-layout__featured-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .ai-magazine-layout__featured-{{ ai_gen_id }}:hover .ai-magazine-layout__featured-image-{{ ai_gen_id }} {
    transform: scale(1.05);
  }

  .ai-magazine-layout__featured-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-magazine-layout__featured-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 300px;
    max-height: 300px;
  }

  .ai-magazine-layout__featured-content-{{ ai_gen_id }} {
    padding: {{ block.settings.content_padding }}px;
  }

  .ai-magazine-layout__category-{{ ai_gen_id }} {
    display: inline-block;
    font-size: {{ block.settings.category_size }}px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: {{ block.settings.accent_color }};
    margin-bottom: 12px;
  }

  .ai-magazine-layout__featured-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.featured_title_size }}px;
    line-height: 1.2;
    margin: 0 0 16px;
    color: {{ block.settings.text_color }};
    font-weight: 700;
  }

  .ai-magazine-layout__featured-excerpt-{{ ai_gen_id }} {
    font-size: {{ block.settings.excerpt_size }}px;
    line-height: 1.6;
    color: {{ block.settings.text_color }};
    opacity: 0.8;
    margin-bottom: 20px;
  }

  .ai-magazine-layout__meta-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 16px;
    font-size: {{ block.settings.meta_size }}px;
    color: {{ block.settings.text_color }};
    opacity: 0.6;
  }

  .ai-magazine-layout__read-more-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    font-size: {{ block.settings.link_size }}px;
    font-weight: 600;
    color: {{ block.settings.accent_color }};
    text-decoration: none;
    margin-top: 16px;
    transition: gap 0.3s ease;
  }

  .ai-magazine-layout__read-more-{{ ai_gen_id }}:hover {
    gap: 12px;
  }

  .ai-magazine-layout__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr;
    gap: {{ block.settings.grid_gap }}px;
  }

  .ai-magazine-layout__article-{{ ai_gen_id }} {
    display: flex;
    gap: 20px;
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.border_radius }}px;
    overflow: hidden;
    transition: transform 0.3s ease;
  }

  .ai-magazine-layout__article-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
  }

  .ai-magazine-layout__article-image-wrapper-{{ ai_gen_id }} {
    flex-shrink: 0;
    width: 140px;
    height: 140px;
    overflow: hidden;
  }

  .ai-magazine-layout__article-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-magazine-layout__article-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-magazine-layout__article-placeholder-{{ ai_gen_id }} svg {
    width: 60px;
    height: 60px;
  }

  .ai-magazine-layout__article-content-{{ ai_gen_id }} {
    flex: 1;
    padding: 20px 20px 20px 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .ai-magazine-layout__article-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.article_title_size }}px;
    line-height: 1.3;
    margin: 0 0 8px;
    color: {{ block.settings.text_color }};
    font-weight: 600;
  }

  .ai-magazine-layout__article-excerpt-{{ ai_gen_id }} {
    font-size: {{ block.settings.article_excerpt_size }}px;
    line-height: 1.5;
    color: {{ block.settings.text_color }};
    opacity: 0.7;
    margin-bottom: 8px;
  }

  .ai-magazine-layout__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  @media screen and (min-width: 750px) {
    .ai-magazine-layout__container-{{ ai_gen_id }} {
      grid-template-columns: 2fr 1fr;
    }

    .ai-magazine-layout__grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }

    .ai-magazine-layout__article-image-wrapper-{{ ai_gen_id }} {
      width: 160px;
      height: 160px;
    }
  }

  @media screen and (max-width: 749px) {
    .ai-magazine-layout__article-{{ ai_gen_id }} {
      flex-direction: column;
    }

    .ai-magazine-layout__article-image-wrapper-{{ ai_gen_id }} {
      width: 100%;
      height: 200px;
    }

    .ai-magazine-layout__article-content-{{ ai_gen_id }} {
      padding: 20px;
    }
  }
{% endstyle %}

<magazine-editorial-{{ ai_gen_id }}
  class="ai-magazine-layout-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-magazine-layout__container-{{ ai_gen_id }}">
    <article class="ai-magazine-layout__featured-{{ ai_gen_id }}">
      <div class="ai-magazine-layout__featured-image-wrapper-{{ ai_gen_id }}">
        {% if block.settings.featured_image %}
          <img
            src="{{ block.settings.featured_image | image_url: width: 1200 }}"
            alt="{{ block.settings.featured_image.alt | escape }}"
            loading="lazy"
            width="{{ block.settings.featured_image.width }}"
            height="{{ block.settings.featured_image.height }}"
            class="ai-magazine-layout__featured-image-{{ ai_gen_id }}"
          >
        {% else %}
          <div class="ai-magazine-layout__featured-placeholder-{{ ai_gen_id }}">
            {{ 'hero-apparel-1' | placeholder_svg_tag }}
            <div class="ai-magazine-layout__empty-state-{{ ai_gen_id }}">
              Add a featured image
            </div>
          </div>
        {% endif %}
      </div>

      <div class="ai-magazine-layout__featured-content-{{ ai_gen_id }}">
        {% if block.settings.featured_category != blank %}
          <span class="ai-magazine-layout__category-{{ ai_gen_id }}">
            {{ block.settings.featured_category }}
          </span>
        {% endif %}

        {% if block.settings.featured_title != blank %}
          <h2 class="ai-magazine-layout__featured-title-{{ ai_gen_id }}">
            {{ block.settings.featured_title }}
          </h2>
        {% endif %}

        {% if block.settings.featured_excerpt != blank %}
          <div class="ai-magazine-layout__featured-excerpt-{{ ai_gen_id }}">
            {{ block.settings.featured_excerpt }}
          </div>
        {% endif %}

        <div class="ai-magazine-layout__meta-{{ ai_gen_id }}">
          {% if block.settings.featured_author != blank %}
            <span>{{ block.settings.featured_author }}</span>
          {% endif %}
          {% if block.settings.featured_date != blank %}
            <span>{{ block.settings.featured_date }}</span>
          {% endif %}
        </div>

        {% if block.settings.featured_link != blank %}
          <a
            href="{{ block.settings.featured_link }}"
            class="ai-magazine-layout__read-more-{{ ai_gen_id }}"
          >
            {{ block.settings.read_more_text }}
            <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M6 12L10 8L6 4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </a>
        {% endif %}
      </div>
    </article>

    <div class="ai-magazine-layout__grid-{{ ai_gen_id }}">
      {% for i in (1..3) %}
        {% liquid
          assign article_image_key = 'article_' | append: i | append: '_image'
          assign article_category_key = 'article_' | append: i | append: '_category'
          assign article_title_key = 'article_' | append: i | append: '_title'
          assign article_excerpt_key = 'article_' | append: i | append: '_excerpt'
          assign article_author_key = 'article_' | append: i | append: '_author'
          assign article_date_key = 'article_' | append: i | append: '_date'
          assign article_link_key = 'article_' | append: i | append: '_link'

          assign article_image = block.settings[article_image_key]
          assign article_category = block.settings[article_category_key]
          assign article_title = block.settings[article_title_key]
          assign article_excerpt = block.settings[article_excerpt_key]
          assign article_author = block.settings[article_author_key]
          assign article_date = block.settings[article_date_key]
          assign article_link = block.settings[article_link_key]
        %}

        <article class="ai-magazine-layout__article-{{ ai_gen_id }}">
          <div class="ai-magazine-layout__article-image-wrapper-{{ ai_gen_id }}">
            {% if article_image %}
              <img
                src="{{ article_image | image_url: width: 400 }}"
                alt="{{ article_image.alt | escape }}"
                loading="lazy"
                width="{{ article_image.width }}"
                height="{{ article_image.height }}"
                class="ai-magazine-layout__article-image-{{ ai_gen_id }}"
              >
            {% else %}
              <div class="ai-magazine-layout__article-placeholder-{{ ai_gen_id }}">
                {{ 'image' | placeholder_svg_tag }}
              </div>
            {% endif %}
          </div>

          <div class="ai-magazine-layout__article-content-{{ ai_gen_id }}">
            {% if article_category != blank %}
              <span class="ai-magazine-layout__category-{{ ai_gen_id }}">
                {{ article_category }}
              </span>
            {% endif %}

            {% if article_title != blank %}
              <h3 class="ai-magazine-layout__article-title-{{ ai_gen_id }}">
                {% if article_link != blank %}
                  <a href="{{ article_link }}" style="color: inherit; text-decoration: none;">
                    {{ article_title }}
                  </a>
                {% else %}
                  {{ article_title }}
                {% endif %}
              </h3>
            {% endif %}

            {% if article_excerpt != blank %}
              <p class="ai-magazine-layout__article-excerpt-{{ ai_gen_id }}">
                {{ article_excerpt }}
              </p>
            {% endif %}

            <div class="ai-magazine-layout__meta-{{ ai_gen_id }}">
              {% if article_author != blank %}
                <span>{{ article_author }}</span>
              {% endif %}
              {% if article_date != blank %}
                <span>{{ article_date }}</span>
              {% endif %}
            </div>
          </div>
        </article>
      {% endfor %}
    </div>
  </div>
</magazine-editorial-{{ ai_gen_id }}>

<script>
  (function() {
    class MagazineEditorial{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.style.display = 'block';
      }
    }

    customElements.define('magazine-editorial-{{ ai_gen_id }}', MagazineEditorial{{ ai_gen_id }});
  })();
</script>

